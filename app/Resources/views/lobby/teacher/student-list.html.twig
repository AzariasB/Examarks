
{% extends "base.html.twig" %}

{% block angularController %}
    {{ asset('assets/js/controllers/userListController.js') }}
{% endblock %}

{% block angularServices %}
    <script src="{{ asset('assets/js/services/modalFormService.js') }}"></script>
    <script src="{{ asset('assets/js/services/postService.js') }}"></script>

{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <h1>
                    {% if is_granted('ROLE_ADMIN') %}
                        Users
                    {% else %}
                        Students
                    {% endif %}
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <table class="table-responsive col-xs-12" >
                    <thead>
                        <tr>
                            <th>Login</th>
                            <th>Email</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>
                                    {{ user.login }}
                                </td>
                                <td>
                                    {{ user.email }}
                                </td>
                                <td>
                                    Boutons pour supprimer/mettre Ã  jour
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <button 
                    ng-click="ctrl.showNewStudentModal('{{ absolute_url(path('createStudent')) }}')"
                    type="button" 
                    class="btn btn-default"
                    >Create new student</button> 
                <span class="pull-right" >
                    <a class="btn btn-default"
                       href="/home">
                        Home
                    </a>
                </span>
            </div>
        </div>
    </div>

{% endblock %}