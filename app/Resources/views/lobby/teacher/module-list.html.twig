
{% extends "base.html.twig" %}

{% block angularController %}
    {{ asset('assets/js/controllers/moduleListController.js') }}
{% endblock %}

{% block angularServices %}
    <script src="{{ asset('assets/js/services/modalFormService.js') }}"></script>
    <script src="{{ asset('assets/js/services/postService.js') }}"></script>
{% endblock %}

{% block title %}
    Modules list
{% endblock %}

{% block content %}
    <div class="container">
        <h1>
            Modules
        </h1>
        {% set maxLength = 0 %}

        {% for m in modules %}
            {% if m.assessments.count > maxLength %}
                {% set maxLength = m.assessments.count %}
            {% endif %}
        {% endfor %}

        <table class="table-responsive col-xs-12" >
            <thead>
                <tr>
                    <th>Abbreviation</th>
                    <th>Name</th>
                    <th colspan="{{ max(1,maxLength) }}" >Assessments and Exams components</th>
                </tr>
            </thead>
            <tbody>
                {% for module in modules%}
                    <tr>
                        <td>
                            <a href="{{ path('module',{'moduleId' : module.id }) }}">
                                {{ module.abbreviation }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('module', {'moduleId': module.id}) }}"> 
                                {{ module.name }}
                            </a>
                        </td>
                        {% for assess in module.assessments %}
                            <td>
                                {{ assess.type }} ({{ assess.weight }}%)
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="row" >
            <div class="col-xs-12" >
                {%  if is_granted('ROLE_TEACHER') %}
                    <button 
                        ng-click="ctrl.showNewModuleModal('{{ absolute_url(path('createModule')) }}')"
                        type="button" 
                        class="btn btn-primary"
                        >Create new module</button>
                {% endif %}
                <span class="pull-right" > 
                    <a href="/home" class="btn btn-default"  >
                        Home
                    </a>
                </span>
            </div>
        </div>

    </div>


{% endblock %}