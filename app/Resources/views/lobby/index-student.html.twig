{# empty Twig template #}
{% extends "base.html.twig" %}

{% block title %}
    Lobby - {{ student.login }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12" id="exams" >
                <h1>My results</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <table class="col-xs-12 table">
                    <thead>
                        <tr>
                            <th> </th>
                            <th> Assessment </th>
                            <th> Mark </th>
                            <th> Equivalent Grade </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% include 'lobby/student/report.html.twig' with {'student' : student } %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row" >
            <div class="col-xs-12">
                <a class="btn btn-default" href="{{ path('moduleList') }}" >
                    See my modules
                </a>
            </div>                                           
        </div>

    </div>
{% endblock %}