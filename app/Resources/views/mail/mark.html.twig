
{% extends "mail/base.html.twig" %}

{% block title %}
    {{ mark.assessment.type }}
{% endblock %}

{% block header %}
    One of your assessments received a mark
{% endblock %}

{% block content %}
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td>
                <p>Hello {{ student.login }},</p>
                <p>One of your assessemnt received a mark, the mark is <b>{{ mark.value }}%</b> (Grade : {{ mark.getGrade }}) </p>
                <table border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
                    <tbody>
                        <tr>
                            <td align="left">
                                <table border="0" cellpadding="0" cellspacing="0">
                                    <tbody>
                                        <tr>
                                            <td> <a href="{{ absolute_url('/home') }}" target="_blank">See my mark</a> </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
                {#                <p>Examarks - UWE</p>#}
            </td>
        </tr>
    </table
{% endblock %}